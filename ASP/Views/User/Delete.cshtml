@model ASP.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>

<div>
    <strong>User ID:</strong> @Model.UserID <br />
    <strong>User Name:</strong> @Model.UserName <br />
    <strong>Email:</strong> @Model.UserEmail <br />
    <strong>Password:</strong> @Model.UserPassword <br />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UserID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index", "User")" class="btn btn-primary">Back to User List</a>
